		script(src="src/init.js")
	body
		#container
			#level
				label load
				input
				label write
				input
			#editor
				#layer-section
					h1 layers
					#layer-listing
						a.button#remove-layer -
						a.button#move-layer-up &uarr;
						a.button#move-layer-down &darr;
						ul#layer-list
					.divider
					#layer-attrs
						.attr-group
							label name
							input(value="layer1")#layer-name
						.attr-group
							label collision
							input(type="checkbox")#layer-collision
						.attr-group
							label tileset
							input(value="images/tilesets/graffiti1.png")#layer-map-tileset
						.attr-group
							label frames per row
							input(value=1)#layer-frames-per-row.small
						.attr-group
							label tilesize
							input(value=16).small#layer-map-tilesize
						.attr-group
							label tiles
							label x
							input(value=8).small#layer-map-tiles-x
							label y
							input(value=8).small#layer-map-tiles-y
						.attr-group
							label offset
							label x
							input(value=0).small#layer-map-offset-x
							label y
							input(value=0).small#layer-map-offset-y
						.attr-group
							label dist
							label x
							input(value=0).small#layer-map-dist-x
							label y
							input(value=0).small#layer-map-dist-y
						a.button#add-layer +
						a.button#update-layer &#8634;
				#entity-section
					h1 entities
					#entity-listing
						a.button#remove-entity -
						a.button#move-entity-up &uarr;
						a.button#move-entity-down &darr;
						ul#entity-list
					.divider
					#new-entity
						.attr-group
							label name
							input#entity-name
						.attr-group
							label classname
							input#entity-class-name
						a.button#add-entity +
					.divider
					#entity-attrs
			#game-content
				#buffer
				#game
